{
  "extends": "../../client-config.json", // NOTE: 만들어질 프로젝트의 상대경로임.
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~assets/*": ["assets/*"],
      "~libs/*": ["app/libs/*"],
      "~components": ["app/components"],
      "~hooks": ["app/hooks"],
      "~models": ["app/models"],
      "~repositories": ["app/repositories"],
      "~routes": ["app/routes"],
      "~screens": ["app/screens"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typeRoots": [
    "./node_modules/@types",
    "../../node_modules/@types",
    "src/@types"
  ]
}
